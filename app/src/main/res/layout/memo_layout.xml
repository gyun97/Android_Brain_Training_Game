<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/memoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewMemo1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewMemo4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewMemo7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewMemo9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>